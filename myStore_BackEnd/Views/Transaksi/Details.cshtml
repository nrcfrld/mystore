@model myStore_BackEnd.Models.view_transaksi

<table class="table table-striped table-bordered" style="width:100%" id="tbltransaksidetail">
    <tbody>
        <tr>

            <td>IDProduk</td>
            <td>Nama Produk</td>
            <td>Jumlah</td>
            <td>Harga</td>
            <td>Jumlah Uang</td>
            <td>Action</td>
        </tr>
        @{ foreach (var d in (dynamic)ViewData["view_details"])
                        {
            <tr>
                <td>@Html.Encode(d.id_produk)</td>
                <td>@Html.Encode(d.nama_produk)</td>
                <td>@Html.Encode(Convert.ToDecimal(d.jumlah).ToString("#,##0.00"))</td>
                <td>@Html.Encode(Convert.ToDecimal(d.harga).ToString("#,##0.00"))</td>
                <td>@Html.Encode(Convert.ToDecimal(d.JumlahUang).ToString("#,##0.00"))</td>
                <td>
                    @Html.ActionLink("Delete", "DeleteTransaksi", "Transaksi", new { id = d.id_transaksi }, new { id = "btndelete", @class = "btn btn-danger btn-sm", onclick = "return confirm('Benar Akan Di Hapus data ini ?');" })
                </td>
            </tr> } }
    </tbody>
</table>